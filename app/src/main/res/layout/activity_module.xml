<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sansen.myandroidlifegamedame.view.GameView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/module_gv"
            app:name=" "
            app:time=" "
            app:row="30"
            app:column="30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:text="坐标"
                android:id="@+id/module_bt_coordinate"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <Button
                android:layout_width="wrap_content"
                android:text="绘制"
                android:id="@+id/module_bt_draw"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <Button
                android:layout_width="wrap_content"
                android:text="配置"
                android:id="@+id/module_bt_config"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:text="擦除"
                android:id="@+id/module_bt_erase"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />
            <Button
                android:layout_width="wrap_content"
                android:text="保存"
                android:id="@+id/module_bt_save"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <Button
                android:layout_width="wrap_content"
                android:text="清除"
                android:id="@+id/module_bt_clean"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</layout>