<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/dialog_title"
        android:gravity="center"
        android:text="@string/dialog_tv_title_config"
        android:paddingLeft="20dp"
        android:textColor="@color/dialog_title_color"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="步数:"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dialog_config_et_steps"
            android:hint="步数"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="间隔时间:"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dialog_config_et_time"
            android:hint="时间（毫秒）"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="x初始位置:"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dialog_config_et_initx"
            android:hint="初始位置（x）"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="y初始位置:"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dialog_config_et_inity"
            android:hint="初始位置（y）"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="20dp"
            android:layout_height="1dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="取消"
            android:id="@+id/dialog_config_bt_cancel"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="确定"
            android:id="@+id/dialog_config_bt_determine"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="20dp"
            android:layout_height="1dp"/>
    </LinearLayout>

</LinearLayout>